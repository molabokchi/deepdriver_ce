version: "3.9"
services:

  # Message micro-service
  service.mesgmicro:
    container_name: micro_message
    hostname: micro_message
    image: registry.bokchi.com/micro_message:0.0.1-community
    environment:
      mode: "comm"
    env_file:
      - ./env/service.env
    deploy:
      resources:
        limits:
          memory: 1g
    volumes:
      - ./_logs:/micro/service/mesgmicro/_logs
    ports:
      - 9041:9041

  

